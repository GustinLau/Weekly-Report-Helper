{
  "productName": "月报小助手",
  "directories": {
    "output": "release/"
  },
  "releaseInfo": {
    "releaseNotes": "1.添加了 xxxx\n2.更新了xxxx\n3.修复了 xxxx"
  },
  "publish": {
    "provider": "generic",
    "url": "http://localhost/test/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.code-workspace",
    "!LICENSE.md",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "!e2e/",
    "!hooks/",
    "!angular.json",
    "!_config.yml",
    "!karma.conf.js",
    "!tsconfig.json",
    "!tslint.json"
  ],
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false,
    "artifactName": "WeeklyReportHelper Setup-${version}.${ext}",
    "shortcutName": "${productName}",
    "include": "installer.nsh"
  },
  "win": {
    "icon": "dist/assets/icons",
    "target": [
      {
        "target": "nsis",
        "arch": [
          "ia32"
        ]
      }
    ]
  },
  "mac": {
    "icon": "dist/assets/icons",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": [
      "AppImage"
    ]
  }
}
